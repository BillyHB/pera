{% extends 'uesperaBundle::Layout.html.twig' %}

{% block body -%}
    <div id="form_wrapper">
        {#<a href='{{ path('cliente_pdf', { 'id': 5 }) }}' target="_blank"> asd </a>#}
        <div id="nombre_form">
            <h1>{{ entity.nombrescliente }} {{ entity.primapellidocliente }} {{ entity.segapellidocliente }}</h1>
