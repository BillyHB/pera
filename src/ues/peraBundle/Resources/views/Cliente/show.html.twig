        <section>
            <div class="top">
                <h2>Información General</h2>
            </div>
            <div class="content_wrapper padding">
                <p class="col1">
                    <label class="largo">Sexo:</label>
                    <input type="text" value="{% if entity.sexocliente == 'm' %}Masculino
                                              {% else %}Femenino
