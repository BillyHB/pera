{% extends 'uesperaBundle::Layout.html.twig' %}

{% block body -%}
    <div id="form_wrapper">
        <div id="nombre_form">
            <h1>Modificar Garantía</h1>
            <div class="btns">                
                <button class="cancelar" onclick="location.href='{{ path('garantia') }}';"> Cancelar </button>
                <button class="guardar" title="Guardar" onclick="document.getElementById('garantia_form').submit();">Guardar</button>                
            </div>
        </div>    
            
        <form id="garantia_form" action="{{ path('garantia_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            <input type="hidden" name="_method" value="PUT" />
            {{ form_errors(edit_form) }}
                
            <section>
                <div class="top">
                    <h2>Información General</h2>
                </div>
                <div class="content_wrapper padding"> 
                    <p class="col1"></p>
                    <p class="col1">
                        {{ form_label(edit_form.tipogarantia) }}
                        {{ form_widget(edit_form.tipogarantia) }}
                    </p>
                    <p class="col1"></p>
                </div>
            </section>        
                
            {{ form_rest(edit_form) }}    
        </form>        
    </div>

