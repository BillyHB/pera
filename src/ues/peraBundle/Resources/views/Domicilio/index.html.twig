{% endblock %}
        
{% block javascripts %}            
    {{ parent() }} 
    <script src="{{ asset('bundles/uespera/js/DataTables-1.10.0/media/js/jquery.dataTables.min.js') }}" type="text/javascript"></script> 
    <script type="text/javascript" src="{{ asset('bundles/uespera/js/alertify.js-0.3.11/mensajes.js') }}" ></script>
{% endblock %}

{% block body -%}
    
    <table id="listado">
        <thead>
            <tr>
                <th>Id</th>
                <th>Domicilio</th>
                {#<th>Actions</th>#}
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.tipodomicilio }}</td>
                {#<td>
                <ul>
                    <li>
                        <a href="{{ path('domicilio_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('domicilio_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>#}
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#<ul>
        <li>
            <a href="{{ path('domicilio_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>#}
{% endblock %}

{% block script -%}

    <script>
        
        $(document).ready(function(){
            /*
             * Configuración de la tabla
             */
            $('#listado').dataTable({
                "order": [[ 0, "asc" ]],
                "language": {
                    "lengthMenu":   "Mostrar _MENU_ registros",
                    "zeroRecords":  "Nothing found - sorry",
                    "info":         "Página _PAGE_ de _PAGES_",
                    "infoEmpty":    "No records available",
                    "infoFiltered": "(filtered from _MAX_ total records)",
                    "search":       "Buscar",
                    paginate: {
                        first:      "Primera",
                        previous:   "Anterior",
                        next:       "Siguiente",
                        last:       "Última"
                    }
                },
                "pagingType": "full_numbers",
                "dom": '<"top"f>r<"table_wrapper"t><"bottom"<"buttons">lp>'
            });
            
            /*
             * incluir el titulo de la tabla y los botones de Agregar, Eliminar y Modificar un registro
             */
            $('#listado_wrapper').addClass('delgado');
            $('div.top').append('<h1>Domicilios</h1>');
            $('div.buttons').append('<button id="nuevo" class="btn" title="Nuevo Domicilio" onclick="location.href=\'{{ path('domicilio_new') }}\';"></button>'
                                    +'<button id="borrar" class="btn" title="Borrar Domicilio"></button>'
                                    +'<button id="actualizar" class="btn" title="Actualizar Domicilio"></button>');
            
            /*
             * Agrega clase 'selected' al seleccionar una fila
             */
            $('#listado tbody').on( 'click', 'tr', function () {
                if ( $(this).hasClass('selected') ) {
                    $(this).removeClass('selected');
                }
                else {
                    $('tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }
            });
            
            /*
             * Invoca a la vista Edit para la fila seleccionada
             */
            $('#actualizar').on('click', function(){
               var id = 0; 
               $('#listado tbody tr').each(function(){
                                      
                    if( $(this).hasClass('selected') ){
                        if( !$(this).children(':first').hasClass('dataTables_empty') )
                         id = parseInt($(this).children(':first').text());                         
                    }
                   
               });
               
               if(id !== 0)
                   window.location = id+"/edit";
               else
                   alert('seleccione un registro');
               
            });
            
            /*
             * Elimina la fila seleccionada
             */
            $('#borrar').on('click', function(){
               var id = 0; 
               $('#listado tbody tr').each(function(){
                    if( $(this).hasClass('selected') ){
                        if( !$(this).children(':first').hasClass('dataTables_empty') )
                         id = parseInt($(this).children(':first').text());                         
                    }
               });
               
               if(id !== 0){
                   alertify.confirm("¿ Está seguro de realizar esta operación ?", function (e){
                      if(e){
                        $.getJSON(Routing.generate('domicilio_delete')+'/'+id,
                             function(data) { 
                                if(data.success){
                                    mensaje_exito(data.msje);
                                    $('#listado tr.selected').remove();
                                }
                                else
                                    mensaje_error(data.msje);
                             });
                      }
                   });
               }    
               else
                   mensaje_info('Debe seleccionar un registro');               
            });
            
        }); 
        
    </script>

{% endblock %}    